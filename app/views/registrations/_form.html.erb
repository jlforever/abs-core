<%= semantic_form_for @registration do |f| %>
  <h1>The Language Journey Starts Here!</h1>
  <%= f.inputs do %>
	<%= f.input :class_level, :as => :radio, :label => "Curriculum", :collection => @class_levels %><br/>
	<%= f.input :location, :as => :select, :label => 'Class location', :collection => @locations_options %><br/>
    <%= f.input :child_first_name, label: 'First child first name' %>
    <%= f.input :child_last_name, label: 'First child last name' %>
	<%= f.input :child_nick_name, label: 'First child nickname' %>
	<%= f.input :child_dob, :as => :date_picker, :label => "First child date of birth" %><br/>
	<%= f.input :second_child_first_name, label: 'Second child first name' %>
	<%= f.input :second_child_last_name, label: 'Second child last name' %>
	<%= f.input :second_child_nickname, label: 'Second child nickname' %>
	<%= f.input :second_child_dob, as: :date_picker, label: 'Second child date of birth' %><br/>
    <%= f.input :parent_first_name %>
    <%= f.input :parent_last_name %>
    <%= f.input :parent_email %>
    <%= f.input :parent_day_phone, :as => :phone, :label => 'Parent day phone*' %>
	<%= f.input :parent_cell_phone, :as => :phone, :label => 'Parent cell phone*' %><br/>
	<%= f.input :address1 %>
	<%= f.input :address2 %>
	<%= f.input :city %>
	<%= f.input :state, :as => :select, :collection => us_states %>
	<%= f.input :zip %><br/>
	<%= f.input :emergency_contact_name %>
	<%= f.input :emergency_contact_phone %>
	<%= f.input :authorized_picked_up_by %><br/>
	<%= f.input :heard_from, :as => :select, :label => "How did you find us? ", :collection => @hear_about_us_options %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :label => "Register" %>
	<%= f.action :reset, :label => "Clear Form" %>
  <% end %>
<% end %>